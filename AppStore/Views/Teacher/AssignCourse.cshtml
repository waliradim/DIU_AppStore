@model AppStore.Models.Tbl_AssignCourse

@{
    ViewBag.Title = "AssignCourse";
    Layout = "~/Views/Shared/_LoginRegLayoutPage.cshtml";
}

<h2>Assign Course</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*<div class="form-group">
            @Html.LabelFor(model => model.TID, "TID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TID, "", new { @class = "text-danger" })
            </div>
        </div>*@
        
        <div class="form-group">
            @Html.LabelFor(model => model.SemesterID, "SemesterID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SemesterID", ViewBag.id as SelectList," -- Select Semester -- ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterID, "", new { @class = "text-danger" })
            </div>
        </div>
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.LID, "LID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LID", ViewBag.lvl as  SelectList, " -- Select Level -- ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CID, "CID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CID", ViewBag.curs as SelectList, " -- Select Course  -- ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

    <script type="text/javascript">

        
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Teacher/GetLevel",
                datatype: "Json",
                success: function (data) {
                    $.each(data, function (index, value) {
                        $('#LID').append('<option value="' + value.LID + '">' + value.LLevel + '</option>');
                    });
                }
            });
        });
       
        $(document).ready(function () {
            $('#LID').change(function () {
                $('#CID').empty();
                $.ajax({
                    type: "POST",
                    url: "/Teacher/GetCourse",
                    datatype: "Json",
                    data: { id: $('#LID').val() },
                    success: function (data) {
                        $('#CID').append('<option value>--Select--</option>');
                        $.each(data, function (index, value) {
                            $('#CID').append('<option value="' + value.CID + '">' + value.CourseName + '</option>');
                        });
                    }
                });
            });
        });
        
    </script>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
